---
layout: default
---

<article class="max-w-5xl mx-auto">
    <header class="mb-14">
        <h1 class="text-3xl text-center font-bold leading-normal text-gray-900 mt-0 mb-3">{{ title }}</h1>
        <div class="text-center">VPublished on {{ page.date | readableDate }}{% if stagger %}{{ stagger }}{% endif %}</div>
        {% if tags %}
        <div class="mt-3 text-center">
            {% for tag in tags %}
            <a href="{{ '/tags/' | url }}{{ tag }}" class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-medium text-gray-700 m-0.5">#{{ tag }}</a>
            {% endfor %}
            <span class="inline-block bg-teal-200 rounded-full px-5 py-1 text-sm font-medium text-gray-900 m-0.5">stagger:{{ stagger }}</span>
        </div>
        {% endif %}
        {% if thumb %}
        <div class="mt-10 -mx-7 md:mx-0">
            <img class="w-full max-w-2xl mx-auto" src="{{ thumb | url }}" width="960" height="500" alt="{{ keymap_author }}'s keymap for the {{ keyboard }}">
        </div>
        {% endif %}
    </header>
    <div id="content" class="prose text-gray-800 max-w-none">
        {{ content | safe }}
    </div>
    {% if site.disqusShortname %}
    <div class="mt-10">
        {% if process.environment === "production" %}
        {% include "partials/disqus.njk" %}
        {% else %}
        <div class="italic text-gray-700">Disqus comments only available for production</div>
        {% endif %}
    </div>
    {% endif %}
</article>
