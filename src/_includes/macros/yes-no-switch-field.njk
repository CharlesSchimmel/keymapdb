{% macro YesNo(legend="Yes or No?") %}
<fieldset class="switch-field">
    <legend>{{ legend }}</legend>
    <input type="radio" id="{{ legend | slugify }}-yes" name="{{ legend | slugify }}-switch-field" value="true"/>
    <label for="{{ legend | slugify }}-yes">Yes</label>
    <input type="radio" id="{{ legend | slugify }}-no" name="{{ legend | slugify }}-switch-field" value="false"/>
    <label for="{{ legend | slugify }}-no">No</label>
</fieldset>
{% endmacro %}
